

<div class="container">
    <div class="row">
          <div id="burgerPhoto" class="col-sm-12">
            <img src="Assets/css/image/hamburger.png">
          </div>
    </div>
    <div class="row">
        {{!-- Undevoured Burger --}}
        <div id= "undevoured"class="col-sm-6">
      {{#each burgers}}
        
        {{#unless dataValues.Devoured}}

            <button type="submit" class="eatburger btn btn-warning" data-id={{dataValues.id}} data-newDevoured = {{dataValues.Devoured}} ><i class="fas fa-utensils"></i>

{{dataValues.Burger_name}}</button>
            <br>
        

           
        {{/unless}}


      {{/each}}

        </div>
        <div id="devourCol"class="col-sm-6">
            
         {{#each burgers}}

            {{#if dataValues.Devoured}}
            
                <ul>
                  <button class="eatburger btn btn-warning">{{dataValues.Burger_name}}</button>
                </ul>
                
            {{/if}}
         {{/each}}

        </div>
    </div>


    <div class="row" id="inputBurger">
        <div id="burgerAddition" class="col-sm-12">
            <form  >
            <input type="text" id="burgersName" placeholder ="What's burger is in your mind?"> 
            <br> 
            <button id="addBurger" type="submit" class="btn btn-dark">Add Burger</button>
            </form>
        </div>
    </div>
</div>